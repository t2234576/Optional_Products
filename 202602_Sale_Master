    CANCEL_EFFECTIVE_DT AS SSG_CANCEL_EFFECTIVE_DT,
    CANCEL_ACCOUNTING_DT AS SSG_CANCEL_ACCOUNTING_DT,
    CANCEL_BIF_BRANCH_NO AS SSG_CANCEL_BIF_BRANCH_NO,
