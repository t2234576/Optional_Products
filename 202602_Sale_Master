    CANCEL_LOAD_TS AS DIP_CANCEL_LOAD_TS,
    RECORD_CREATED_TS AS DIP_RECORD_CREATED_TS,
    RECORD_UPDATE_TS AS DIP_RECORD_UPDATE_TS,
    LOAN_ELIGIBLE AS DIP_LOAN_ELIGIBLE,
