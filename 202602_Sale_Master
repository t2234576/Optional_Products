    SUM(IS_SCA_CUSTOMER_INITIATED_CANCEL) AS Cancel_By_Customer, 
    (SUM(IS_SCA_CANCELED) - SUM(IS_SCA_CUSTOMER_INITIATED_CANCEL)) AS Cancel_By_OneMain_Policy
FROM optional_product_master
UNION ALL

