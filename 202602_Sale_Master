-- ====================================================================
-- FINAL SUMMARY: PIVOT-READY FORMAT (Avg Days & Initiator Flag)
-- ====================================================================

SELECT 
    '1. SCL' AS Product,
    CASE 
        WHEN IS_SCL_CUSTOMER_INITIATED_CANCEL = 1 THEN 'Customer' 
        ELSE 'OneMain/Policy' 
    END AS Cancel_Initiator,
    COUNT(*) AS Total_Canceled,
    ROUND(AVG(SCL_DAYS_TO_CANCEL), 1) AS Avg_Days_To_Cancel,
    
    -- Buckets for this specific initiator group
    SUM(IS_SCL_CANCEL_WITHIN_30DAYS) AS Cancel_0_30_Days,
    (SUM(IS_SCL_CANCEL_WITHIN_60DAYS) - SUM(IS_SCL_CANCEL_WITHIN_30DAYS)) AS Cancel_31_60_Days,
    (COUNT(*) - SUM(IS_SCL_CANCEL_WITHIN_60DAYS)) AS Cancel_Beyond_60_Days

FROM optional_product_master
WHERE IS_SCL_CANCELED = 1
GROUP BY 1, 2

UNION ALL

SELECT 
    '2. SCA' AS Product,
    CASE 
        WHEN IS_SCA_CUSTOMER_INITIATED_CANCEL = 1 THEN 'Customer' 
        ELSE 'OneMain/Policy' 
    END AS Cancel_Initiator,
    COUNT(*) AS Total_Canceled,
    ROUND(AVG(SCA_DAYS_TO_CANCEL), 1) AS Avg_Days_To_Cancel,
    SUM(IS_SCA_CANCEL_WITHIN_30DAYS) AS Cancel_0_30_Days,
    (SUM(IS_SCA_CANCEL_WITHIN_60DAYS) - SUM(IS_SCA_CANCEL_WITHIN_30DAYS)) AS Cancel_31_60_Days,
    (COUNT(*) - SUM(IS_SCA_CANCEL_WITHIN_60DAYS)) AS Cancel_Beyond_60_Days
FROM optional_product_master
WHERE IS_SCA_CANCELED = 1
GROUP BY 1, 2

UNION ALL

