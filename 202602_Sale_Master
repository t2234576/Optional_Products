    CASE WHEN SALE_CT > 0 AND DAYS_TO_CANCEL IS NOT NULL AND DAYS_TO_CANCEL <= 60 THEN 1 ELSE 0 END AS IS_SSG_CANCEL_WITHIN_60DAYS,
    
