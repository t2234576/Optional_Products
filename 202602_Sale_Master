    ROUND(AVG(ATL_DAYS_TO_CANCEL), 1) AS Avg_Days_To_Cancel,
    SUM(IS_ATL_CANCEL_WITHIN_30DAYS) AS Cancel_0_30_Days,
    (SUM(IS_ATL_CANCEL_WITHIN_60DAYS) - SUM(IS_ATL_CANCEL_WITHIN_30DAYS)) AS Cancel_31_60_Days,
    (COUNT(*) - SUM(IS_ATL_CANCEL_WITHIN_60DAYS)) AS Cancel_Beyond_60_Days
FROM optional_product_master A
WHERE IS_ATL_CANCELED = 1
GROUP BY 1, 2, 3, 4

UNION ALL

SELECT 
    '7. SSG' AS Product,
    COALESCE(A.RSK_LVL, 'Unknown') AS RSK_LVL,
    COALESCE(A.CUST_TYPE, 'Unknown') AS Customer_Type,
    CASE 
        WHEN IS_SSG_CUSTOMER_INITIATED_CANCEL = 1 THEN 'Customer' 
        ELSE 'OneMain/Policy' 
    END AS Cancel_Initiator,
    COUNT(*) AS Total_Canceled,
    ROUND(AVG(SSG_DAYS_TO_CANCEL), 1) AS Avg_Days_To_Cancel,
    SUM(IS_SSG_CANCEL_WITHIN_30DAYS) AS Cancel_0_30_Days,
    (SUM(IS_SSG_CANCEL_WITHIN_60DAYS) - SUM(IS_SSG_CANCEL_WITHIN_30DAYS)) AS Cancel_31_60_Days,
    (COUNT(*) - SUM(IS_SSG_CANCEL_WITHIN_60DAYS)) AS Cancel_Beyond_60_Days
FROM optional_product_master A
WHERE IS_SSG_CANCELED = 1
GROUP BY 1, 2, 3, 4

UNION ALL

SELECT 
    '9. DIP' AS Product,
    COALESCE(A.RSK_LVL, 'Unknown') AS RSK_LVL,
    COALESCE(A.CUST_TYPE, 'Unknown') AS Customer_Type,
    CASE 
        WHEN IS_DIP_CUSTOMER_INITIATED_CANCEL = 1 THEN 'Customer' 
        ELSE 'OneMain/Policy' 
    END AS Cancel_Initiator,
    COUNT(*) AS Total_Canceled,
    ROUND(AVG(DIP_DAYS_TO_CANCEL), 1) AS Avg_Days_To_Cancel,
    SUM(IS_DIP_CANCEL_WITHIN_30DAYS) AS Cancel_0_30_Days,
    (SUM(IS_DIP_CANCEL_WITHIN_60DAYS) - SUM(IS_DIP_CANCEL_WITHIN_30DAYS)) AS Cancel_31_60_Days,
    (COUNT(*) - SUM(IS_DIP_CANCEL_WITHIN_60DAYS)) AS Cancel_Beyond_60_Days
FROM optional_product_master A
WHERE IS_DIP_CANCELED = 1
GROUP BY 1, 2, 3, 4;


describe table optional_product_master
